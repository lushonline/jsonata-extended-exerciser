{
  "name": "jsonata-extended-exerciser",
  "description": "This allows you to test JSONata expressions against a JSON input. It supports the extended functions from https://www.npmjs.com/package/jsonata-extended",
  "version": "1.1.0",
  "private": true,
  "author": "Martin Holden &lt;martin.holden@skillsoft.com&gt;",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/martinholden-skillsoft/jsonata-extended-exerciser.git"
  },
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "access-safe": "^0.1.0",
    "auto-changelog": "^2.4.0",
    "camelcase": "^6.3.0",
    "dotenv": "^16.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "js-file-download": "^0.4.12",
    "jsonfile": "^6.1.0",
    "lodash": "^4.17.21",
    "monaco-editor": "^0.32.1",
    "monaco-editor-webpack-plugin": "^7.0.1",
    "papaparse": "^5.3.1",
    "prettier": "^2.5.1",
    "prop-types": "^15.8.1",
    "react": "^17.0.2",
    "react-app-rewired": "^2.2.1",
    "react-bootstrap": "^2.2.0",
    "react-dom": "^17.0.2",
    "react-monaco-editor": "^0.47.0",
    "react-resize-detector": "^7.0.0",
    "react-scripts": "^5.0.0",
    "rimraf": "^3.0.2",
    "uuid": "^8.3.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "preversion": "eslint .",
    "postversion": "npm run build && git push && git push --tags && npm run changelog && git push",
    "changelog": "rimraf CHANGELOG.md && auto-changelog --template keepachangelog && git add . && git commit . -m changelog && git push",
    "prestart": "npm run build",
    "start": "react-app-rewired start",
    "build": "react-app-rewired build"
  },
  "eslintConfig": {
    "extends": [
      "plugin:prettier/recommended",
      "react-app",
      "react-app/jest"
    ],
    "rules": {
      "max-len": [
        "warn",
        {
          "code": 100,
          "tabWidth": 2,
          "comments": 100,
          "ignoreComments": false,
          "ignoreTrailingComments": true,
          "ignoreUrls": true,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true,
          "ignoreRegExpLiterals": true
        }
      ]
    },
    "ignorePatterns": [
      "/build/**/*",
      "/node_modules/**/*"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
